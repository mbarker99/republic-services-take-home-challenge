<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.RouteFragment"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_driver_name"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Driver Name"
        style="@style/TextAppearance.Material3.TitleLarge"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_driver_id"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Driver ID"
        style="@style/TextAppearance.Material3.TitleSmall"
        app:layout_constraintTop_toBottomOf="@id/tv_driver_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginVertical="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_driver_id"/>

    <TextView
        android:id="@+id/tv_route_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Route Name"
        style="@style/TextAppearance.Material3.TitleMedium"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_route_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Route Type"
        style="@style/TextAppearance.Material3.TitleSmall"
        app:layout_constraintTop_toTopOf="@id/tv_route_name"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_route_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Route ID"
        style="@style/TextAppearance.Material3.BodySmall"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tv_route_type"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>